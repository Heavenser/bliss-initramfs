LVM_POOL_NAME="funtoo"
LVM_ROOT_NAME="root"
JV_MOD_PATH=""

# Function to start rescue shell
rescue_shell() {
	echo "Booting into rescue shell"
	busybox --install -s
	exec /bin/sh
}

# Function to load ZFS modules 
load_modules() {
	MODULES="spl splat zavl znvpair zcommon zunicode zfs zpios"
	
	for MODULE in ${MODULES}; do
		insmod ${JV_MOD_PATH}/${MODULE}.ko
	done
}

# Mount Kernel Devices 
mount -t proc none /proc
mount -t devtmpfs none /dev
mount -t sysfs none /sys

# Load ZFS Modules
#load_modules || rescue_shell

sleep 2 

# Mount LVM Pool
lvm vgchange -a y ${LVM_POOL_NAME} || rescue_shell
lvm vgscan --mknodes || rescue_shell

mount /dev/${LVM_POOL_NAME}/${LVM_ROOT_NAME} /mnt/root || rescue_shell

# Unmount Kernel Devices
umount /proc
umount /dev
umount /sys

# Switch to the new root
exec switch_root /mnt/root /sbin/init || rescue_shell
