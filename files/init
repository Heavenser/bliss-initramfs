# Import Functions
. $(pwd)/resources/generic.sh

# Variables
NEW_ROOT="/mnt/root"
INIT="/sbin/init"

USE_ZFS="0"
USE_LUKS="0"

VERSION="0"

### Lasu la ludoj komenci ###

welcome

einfo "Mounting kernel devices..."
mnt_kernel_devs || die "Failed to mount kernel devices"

einfo "Parsing command line values..."
parse_cmdline

prevent_printk

einfo "Loading modules..."
load_modules || die "Failed to load kernel modules"

if [ "${recover}" = "1" ]; then
	ewarn "Recovery Mode Enabled... Entering Rescue Environment"
	rescue_shell
fi

if [ "${su}" = "1" ]; then
	ewarn "Single User Enabled... Entering Rescue Environment"
        single_user
fi

if [ "${refresh}" = "1" ]; then
        refresh_cache
fi

check_triggers

# Let's clean up and go to the OS
have_a_nice_day
